<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cs_KTX_Activity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baithi1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:background="#5C27B0"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CO SO KY TUC XA"
        android:textSize="25dp"
        android:gravity="center"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/txt_linhnam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Linh Nam"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#807A7A"/>

    <TextView
        android:id="@+id/txt_minhkhai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minh Khai"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#807A7A"/>

    <TextView
        android:id="@+id/txt_namdinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nam Dinh"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#807A7A"/>

    <TextView
        android:id="@+id/txt_myxa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Xa"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:background="#5C27AF"
        android:textColor="@color/white"
        android:layout_gravity="center"/>
</LinearLayout>